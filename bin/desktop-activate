#!/bin/bash

if [ -z "$DISPLAY" ]; then
    export DISPLAY=:0
fi

if pidof i3lock >/dev/null 2>&1; then
    xset dpms force on
    if [ "$DPMS_FORCE_TURN_OFF_SCREEN" = true ]; then
        (sleep 60; xset dpms force off) &
    else
        xset +dpms dpms 60 60 60
    fi
elif pidof vlock >/dev/null 2>&1; then
    setterm --blank 0
    sleep 1
    setterm --blank 1
fi
