#!/bin/bash

n=$(xdotool search --onlyvisible --class chinese-calendar | wc -l)
if [ "$1" = "on" ]; then
    if [ "$n" -gt "1" ]; then
        exit 0
    fi
elif [ "$1" = "off" ]; then
    if [ "$n" -lt "2" ]; then
        exit 0
    fi
fi

# toggle
for i in 1 2
do
    WINDOW=$(xdotool search --class chinese-calendar | sort | head -1)
    if [ -z "$WINDOW" ]; then
        dex /usr/share/applications/chinese-calendar.desktop
        sleep 1
    else
        xdotool click --repeat 2 --window $WINDOW 1
        exit 0
    fi
done
