#!/bin/bash

killall compton
compton -cCGb\
        -d :0.0\
        -t 0\
        --config /dev/null\
        --inactive-dim=0.15\
        --detect-transient\
        --focus-exclude 'class_g = "Rofi"'\
        --detect-client-opacity\
        --detect-rounded-corners\
        --shadow-ignore-shaped\
        --use-ewmh-active-win\
        --mark-wmwin-focused\
        --detect-client-leader
