* {
    background-color:            #{{EmacsPopupMenuBackground}};
    text-color:                  #{{EmacsPopupMenuForeground}};
    selected-background-color:   #{{EmacsPopupMenuSelectionBackground}};
    selected-text-color:         #{{EmacsPopupMenuSelectionForeground}};
    border-color:                #{{EmacsRegionBackground}};
    underline-color:             #{{EmacsCursorBackground}};
    transparent:                 #{{EmacsPopupMenuBackground}}cc;
}

#window {
    children: [ inputbar, listview ];
    padding: 0;
    spacing: 0;
    border: 1;
    border-color: @border-color;
    transparency: "real";
    padding: 1em 2em 1.5em 2em;
}

#inputbar {
    children: [ entry, prompt ];
    padding: 0;
    border-radius: 1em;
    border: 1;
    border-color: @selected-background-color;
    margin: 0 0 0 14em;
}

#prompt {
    padding: 0.25em 0.5em;
    margin: 0;
    font: "Awasome 15";
}

#entry {
    padding: 0.25em 0.5em;
    margin: 0;
}

#listview {
    margin: 0.75em 0;
    spacing: 0;
    padding: 0;
    scrollbar: false;
}

#element {
    padding: 0.5em;
    border-radius: 1em;
}

#element.selected {
    text-color: @selected-text-color;
    background-color: @selected-background-color;
}