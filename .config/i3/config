bindsym $mod+d exec --no-startup-id "killall rofi; rofi -p '' -show drun"
bindsym $mod+t exec --no-startup-id "killall rofi; rofi -p '' -show "
bindsym $mod+w exec --no-startup-id "killall rofi; rofi -p '' -show window"

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
