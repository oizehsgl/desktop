# resize window (you can also use the mouse for that)
set $resize [f]  [b]  [n]  [p]
mode "$resize" {
        bindsym f resize grow width 10 px or 10 ppt
        bindsym b resize shrink width 10 px or 10 ppt
        bindsym n resize grow height 10 px or 10 ppt
        bindsym p resize shrink height 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt

        # back to normal: Enter or Escape or q
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym q mode "default"
        bindsym Control+g mode "default"
}

bindsym $mod+Shift+s mode "$resize"

# Screen brightness controls
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight - 5
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight + 5
# Screen brightness mode
set $brightness_management U[p]    Dow[n]
mode "$brightness_management" {
     bindsym p exec --no-startup-id xbacklight + 5
     bindsym n exec --no-startup-id xbacklight - 5

     # back to normal: Enter or Escape or q
     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym q mode "default"
     bindsym Control+g mode "default"
}
bindsym $mod+Shift+b mode "$brightness_management"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec amixer set Master playback 1000+
bindsym XF86AudioLowerVolume exec amixer set Master playback 1000-
bindsym XF86AudioMute exec amixer set Master toggle

set $volume U[p]    Dow[n]    Mut[e]
mode "$volume" {
        bindsym p exec amixer set Master playback 1000+
        bindsym n exec amixer set Master playback 1000-
        bindsym e exec amixer set Master toggle, mode "default"

        # back to normal: Enter or Escape or q
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym q mode "default"
        bindsym Control+g mode "default"
}
bindsym $mod+Shift+v mode "$volume"


